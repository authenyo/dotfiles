# Bar
bar {
    id sway
    swaybar_command waybar
}

# Output
output eDP-1 {
	subpixel rgb
	max_render_time 6
	adaptive_sync on
}
swaybg_command -

# Input
input {
    type:keyboard {
        xkb_numlock enable
    }
    type:touchpad {
	drag enabled
	dwt enabled
	middle_emulation enabled
	natural_scroll enabled
	tap enabled
	# pointer_accel 0.3
    }
}

# Seat
seat seat0 {
    xcursor_theme Qogir-white-cursors
    hide_cursor when-typing enable
}



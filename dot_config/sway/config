# Autostart
exec --no-startup-id dbus-update-activation-environment --all
exec /usr/libexec/polkit-gnome-authentication-agent-1
exec gentoo-pipewire-launcher
exec foot -s
exec swayidle -w \
         timeout 300 'swaylock.sh' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         timeout 900 'loginctl suspend' \
         before-sleep 'volume.sh --mute && \
         playerctl pause || echo 0 && \
         if ! [[ "pidof -x 'swaylock.sh'" > /dev/null ]]; then swaylock.sh ; fi' 
exec wlsunset -l 22.6 -L 88.4 
exec pcmanfm --daemon-mode
exec xsettingsd

# Variables
set $mod Mod4
set $term footclient
set $menu bemenu.sh | xargs swaymsg exec --
set $launcher bemenu-launcher.sh | xargs swaymsg exec --
set $browser "google-chrome-stable --ozone-platform-hint=auto"
set $alt_browser firefox-bin
set $file_manager pcmanfm
set $wallpapers_path $HOME/Themes/Wallpapers

# Essential keybindings
bindsym XF86AudioRaiseVolume exec volume.sh --inc
bindsym XF86AudioLowerVolume exec volume.sh --dec
bindsym XF86AudioMute exec volume.sh --toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86MonBrightnessUp exec brightness.sh --inc
bindsym XF86MonBrightnessDown exec brightness.sh --dec

# Misc optioms
focus_follows_mouse yes
floating_modifier $mod normal
floating_maximum_size 1366 x 768

# Aesthetics
default_border none
default_floating_border none
titlebar_border_thickness 0
title_align center
gaps inner 15
font pango:JetBrainsMono Nerd Font Bold 11.5

# Theming
seat seat0 xcursor_theme Fluent-dark-cursors
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Catppuccin-dark'
    gsettings set $gnome-schema icon-theme 'Fluent-dark'
    gsettings set $gnome-schema cursor-theme 'Fluent-dark-cursors'
    gsettings set $gnome-schema font-name 'SF Pro Text 11.5'
}

# Output
output eDP-1 {
	subpixel rgb
	bg $(find $wallpapers_path -type f | shuf -n 1) fill
}

# Input
input type:keyboard xkb_numlock enable
input type:touchpad {
	drag enabled
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

# Keybindings
bindsym $mod+b exec $browser
bindsym $mod+Shift+b exec $alt_browser
bindsym $mod+Shift+f exec $file_manager
bindsym $mod+Return exec $term
bindsym $mod+c kill
bindsym $mod+d exec $launcher
bindsym $mod+Shift+d exec $menu
bindsym $mod+Escape reload
bindsym $mod+Shift+q exec powermenu.sh
bindsym $mod+Shift+l exec swaylock.sh

bindsym Print exec grimshot --notify copy output
bindsym $mod+Print exec grimshot --notify save output
bindsym Shift+Print exec grimshot --notify copy area
bindsym $mod+Shift+Print exec grimshot --notify save area

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right 

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6

bindsym $mod+h splith
bindsym $mod+v splitv

bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+s layout toggle split

bindsym $mod+f fullscreen
bindsym $mod+space floating toggle
bindsym $mod+p focus parent

bindsym $mod+Shift+o move scratchpad
bindsym $mod+Shift+p scratchpad show

mode "resize" {
bindsym Left resize shrink width 20px
bindsym Down resize grow height 20px
bindsym Up resize shrink height 20px
bindsym Right resize grow width 20px

bindsym Return mode "default"
bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Window rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*

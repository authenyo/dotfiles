    $launcher rofi -show drun
    $browser firefox-bin
    # $alt_browser google-chrome-unstable --enable-features=WebUIDarkMode --force-dark-mode
    $file_manager footclient nnn
    # $wallpapers_path $HOME/Pictures/Wallpapers
}

